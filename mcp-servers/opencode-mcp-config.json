{
  "mcpServers": {
    "opencode-dashboard-launcher": {
      "command": "node",
      "args": ["{{OPENCODE_ROOT}}/packages/opencode-dashboard-launcher/src/index.js"],
      "description": "Auto-starts the OpenCode dashboard when sessions begin",
      "enabled": true
    },
    "opencode-memory-graph": {
      "command": "node",
      "args": ["{{OPENCODE_ROOT}}/packages/opencode-memory-graph/src/cli.js"],
      "description": "Session-to-error graph builder from OpenCode runtime logs",
      "enabled": true
    },
    "opencode-model-router-x": {
      "command": "node",
      "args": ["{{OPENCODE_ROOT}}/packages/opencode-model-router-x/src/index.js"],
      "description": "Policy-based model router with outcome tuning",
      "enabled": true
    },
    "opencode-context-governor": {
      "command": "node",
      "args": ["{{OPENCODE_ROOT}}/packages/opencode-context-governor/src/index.js"],
      "description": "Token budget controller per model/session",
      "enabled": true
    },
    "opencode-runbooks": {
      "command": "node",
      "args": ["{{OPENCODE_ROOT}}/packages/opencode-runbooks/src/index.js"],
      "description": "Auto-remediation based on error signatures",
      "enabled": true
    }
  }
}
