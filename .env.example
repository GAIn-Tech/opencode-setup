# ============================================================================
# OpenCode Setup - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# All keys are optional â€” missing keys disable their respective providers/features.
# The system degrades gracefully: unavailable providers are skipped during routing.
# ============================================================================

# --- API Keys: Model Providers ---
# Comma-separated for multi-key rotation (e.g., key1,key2,key3)

# Anthropic (Claude models)
ANTHROPIC_API_KEYS=

# Google (Gemini models, including Antigravity proxy)
GOOGLE_API_KEYS=

# OpenAI (GPT models)
OPENAI_API_KEYS=

# SambaNova
SAMBANOVA_API_KEYS=

# NVIDIA NIM
NVIDIA_API_KEY=
NVIDIA_API_KEY_BACKUP=

# Groq (fast inference)
GROQ_API_KEY=
GROQ_API_KEY_BACKUP=

# Cerebras (fast inference)
CEREBRAS_API_KEY=
CEREBRAS_API_KEY_BACKUP=

# --- API Keys: Services ---

# Supermemory (persistent memory across sessions)
SUPERMEMORY_API_KEY=

# Tavily (web search for research tasks)
TAVILY_API_KEY=

# GitHub token (required for GitHub MCP tools)
GITHUB_TOKEN=

# --- Portability & Runtime Overrides ---
# Optional: set explicit Bun binary path when PATH contains conflicting Bun shims.
OPENCODE_BUN_PATH=

# Optional: override required Bun version used by preflight/verify checks.
OPENCODE_REQUIRED_BUN_VERSION=1.3.9

# Optional: force repository root if auto-detection is incorrect.
OPENCODE_ROOT=

# Optional: override user config/data directories.
OPENCODE_CONFIG_HOME=
OPENCODE_DATA_HOME=

# Optional: plugin namespace override used by verify/health checks.
PLUGIN_SCOPE=

# Optional: override Bun install directory used for link checks.
BUN_INSTALL=

# --- Model Router ---
# Strategy for model selection: cost_optimized | performance | balanced | fallback_chain
MODEL_ROUTER_STRATEGY=balanced

# --- Rate Limiting & Fallback ---
# Enable automatic fallback when a provider hits rate limits
RATE_LIMIT_FALLBACK_ENABLED=true

# Milliseconds to cool down after rate limit hit
RATE_LIMIT_COOLDOWN_MS=60000

# Number of consecutive failures before triggering fallback
RATE_LIMIT_MAX_FAILURES=3

# --- Quota Management ---
# Enable Antigravity quota monitoring
QUOTA_MANAGER_ENABLED=true

# Percentage thresholds for quota alerts
QUOTA_WARNING_THRESHOLD=80
QUOTA_CRITICAL_THRESHOLD=95
