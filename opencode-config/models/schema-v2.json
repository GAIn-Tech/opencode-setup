{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenCode Model Catalog Schema",
  "description": "Schema for validating model configurations across all providers",
  "type": "object",
  "required": ["models", "providers", "version"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version (date-based)"
    },
    "models": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9-._]+$": {
          "$ref": "#/definitions/model"
        }
      }
    },
    "providers": {
      "type": "object",
      "properties": {
        "anthropic": { "$ref": "#/definitions/provider" },
        "openai": { "$ref": "#/definitions/provider" },
        "google": { "$ref": "#/definitions/provider" },
        "groq": { "$ref": "#/definitions/provider" },
        "cerebras": { "$ref": "#/definitions/provider" },
        "nvidia": { "$ref": "#/definitions/provider" },
        "deepseek": { "$ref": "#/definitions/provider" }
      }
    }
  },
  "definitions": {
    "model": {
      "type": "object",
      "required": ["id", "provider", "status", "capabilities"],
      "properties": {
        "id": { "type": "string" },
        "provider": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["active", "preview", "deprecated", "eol"]
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "contextWindow": { "type": "integer" },
            "maxOutputTokens": { "type": "integer" },
            "vision": { "type": "boolean" },
            "functionCalling": { "type": "boolean" },
            "jsonMode": { "type": "boolean" },
            "systemPrompt": { "type": "boolean" }
          }
        },
        "pricing": {
          "type": "object",
          "properties": {
            "inputPer1M": { "type": "number" },
            "outputPer1M": { "type": "number" }
          }
        },
        "releaseDate": { "type": "string", "format": "date" },
        "deprecationDate": { "type": "string", "format": "date" },
        "replacementModel": { "type": "string" },
        "deprecationReason": { "type": "string" }
      }
    },
    "provider": {
      "type": "object",
      "required": ["id", "name", "apiEndpoint"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "apiEndpoint": { "type": "string", "format": "uri" },
        "rateLimits": {
          "type": "object",
          "properties": {
            "requestsPerMinute": { "type": "integer" },
            "tokensPerMinute": { "type": "integer" }
          }
        }
      }
    }
  }
}
