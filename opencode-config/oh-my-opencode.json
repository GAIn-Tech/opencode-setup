{
  "$schema": "https://opencode.ai/config.json",
  "google_auth": false,
  "agents": {
    "enabled": [
      "atlas",
      "hephaestus",
      "librarian",
      "metis",
      "momus",
      "oracle",
      "prometheus",
      "sisyphus"
    ],
    "atlas": {
      "model": "anthropic/claude-sonnet-4-5"
    },
    "hephaestus": {
      "model": "google/antigravity-gemini-2.0-flash"
    },
    "librarian": {
      "model": "google/antigravity-gemini-2.0-flash"
    },
    "metis": {
      "model": "anthropic/claude-sonnet-4-5"
    },
    "momus": {
      "model": "anthropic/claude-sonnet-4-5"
    },
    "oracle": {
      "model": "anthropic/claude-opus-4-6"
    },
    "prometheus": {
      "model": "google/antigravity-gemini-2.0-flash"
    },
    "sisyphus": {
      "model": "anthropic/claude-opus-4-6"
    }
  },
  "mcp": {
    "context7": {
      "enabled": true
    },
    "grep": {
      "enabled": true
    },
    "websearch": {
      "enabled": true
    }
  },
  "hooks": {
    "onStart": [
      "echo 'oh-my-opencode loaded with 8 agents and 3 MCP toggles + Antigravity account rotation'"
    ]
  }
}
